@import "_utils.styl"
@import "_variables.styl"

input::-webkit-input-placeholder
    color:    #b5b5b5

input:-moz-placeholder
    color:    #b5b5b5

.container
    width: standarwidth
    max-width: $standarwidth
    margin: 0 auto

#signup
    padding: 0px $mainpadding*1.25 $mainpadding*1.25
    background: #fff
    box-shadow2(0px 0px 0px 5px rgba(255,255,255,0.4),0px 4px 20px rgba(0,0,0,0.33))    
    border-radius($radius)
    display: table
    position: static

    .header
        margin-bottom: $mainpadding

        h3
            color: #333333
            font-size: $mainsize
            font-weight: bold
            margin-bottom: $radius

    .sep
        height: 1px
        background: lighten($mcolor,80%)
        width: $standarwidth
        margin: 0px -1*$mainsize

    .inputs
        margin-top: $mainsize

        label
            color: #8f8f8f
            font-size: 0.5*$mainsize                
            margin-bottom: 1.2*$radius
            display: block

        input[type=email], input[type=text]
            background: #f5f5f5
            font-size: 0.8rem
            border-radius(3px)
            border: none
            padding: $mainsize*0.5 10px 2*$radius
            width: $rowwidth
            margin-bottom: $mainpadding
            box-shadow(inset 0px 2px 3px rgba(0,0,0,0.1))    
            clear: both

        input[type=email]:focus, input[type=text]:focus
            background: #fff
            box-shadow3(0px 0px 0px 3px #fff38e, inset 0px 2px 3px rgba( 0,0,0,0.2 ), 0px 5px 5px rgba( 0,0,0,0.15))        
            outline: none

        input:focus + .help 
            display:block

.btn
    font-size: 0.85em
    color: $fcolor
    border-radius: $radius
    box-shadow2(inset 0px 0px $halfpadding $mcolor, 0px 0px $halfpadding lighten($mcolor,25%))
    background: $mcolor
    border: $border-radius solid darken($mcolor,10%)
    width: 100%
    margin-top: 20px
    padding: 15px 0
    font-weight: 500
    letter-spacing: 1px
    text-align: center
    text-decoration: none            
    text-shadow:0px 1px 3px rgba(000,000,000,0.3),0px 0px 0px rgba(255,255,255,0)
    display: table
    position: static
    clear: both
    cursor: pointer
    &:hover
        background: lighten($mcolor,10%)

.help
    font-weight: 500    
    display: none
    color: $infocolor
    font-size: 0.7em
    margin-bottom: 20px
    margin-top: -0.35em
    